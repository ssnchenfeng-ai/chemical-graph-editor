        <TextArea value={generateCode()} autoSize={{ minRows: 15, maxRows: 25 }} style={{ fontFamily: 'monospace', fontSize: 12, background: '#f5f5f5' }} />
        
        <div style={{ marginTop: 16, display: 'flex', gap: 8 }}>
