export const createDrawing = async (name: string) => {
  const session = driver.session();
  const id = crypto.randomUUID();
  try {
    await session.run(
      `CREATE (d:Drawing {id: $id, name: $name, createdAt: datetime()}) RETURN d`,
      { id, name }
    );
    return { id, name };
  } finally {
    await session.close();
  }
};

